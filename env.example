# ========================================
# AI GYM COACH - CONFIGURATION EXAMPLE
# ========================================

# ========================================
# TELEGRAM BOT CONFIGURATION
# ========================================
# Токен вашего Telegram бота (получите у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID вашего Mini App (получите у @BotFather после создания /newapp)
TELEGRAM_APP_ID=your_app_id_here

# URL для webhook (замените на ваш публичный URL)
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# URL фронтенда для Mini App
TELEGRAM_FRONTEND_URL=https://your-domain.com

# ========================================
# DATABASE CONFIGURATION
# ========================================
# URL базы данных (для продакшена используйте PostgreSQL)
DATABASE_URL=sqlite:///./aigym_coach.db

# URL тестовой базы данных
DATABASE_TEST_URL=sqlite:///./aigym_coach_test.db

# ========================================
# API CONFIGURATION
# ========================================
# OpenAI API ключ (для генерации тренировок)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI модель
OPENAI_MODEL=gpt-3.5-turbo

# ========================================
# SERVER CONFIGURATION
# ========================================
# Порт для backend сервера
BACKEND_PORT=8000

# Порт для frontend сервера
FRONTEND_PORT=3000

# Режим работы (development/production)
ENVIRONMENT=development

# Секретный ключ для JWT токенов
SECRET_KEY=your_secret_key_here

# ========================================
# LOGGING CONFIGURATION
# ========================================
# Уровень логирования
LOG_LEVEL=INFO

# ========================================
# FEATURES CONFIGURATION
# ========================================
# Включить/выключить функции
ENABLE_TELEGRAM_WEBHOOK=true
ENABLE_OPENAI_INTEGRATION=false
ENABLE_DATABASE=true
ENABLE_MONITORING=true

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
# Использовать mock данные
USE_MOCK_DATA=true

# Автоматический перезапуск при изменениях
AUTO_RELOAD=true

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Разрешенные домены для CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-domain.com

# Максимальный размер файла (в байтах)
MAX_FILE_SIZE=10485760

# ========================================
# NOTIFICATIONS CONFIGURATION
# ========================================
# Включить уведомления
ENABLE_NOTIFICATIONS=true

# Тип уведомлений (telegram/email/console)
NOTIFICATION_TYPE=telegram

# ========================================
# WORKOUT CONFIGURATION
# ========================================
# Максимальное количество упражнений в тренировке
MAX_EXERCISES_PER_WORKOUT=10

# Максимальная длительность тренировки (в минутах)
MAX_WORKOUT_DURATION=120

# Уровни сложности
WORKOUT_DIFFICULTY_LEVELS=beginner,intermediate,advanced

# ========================================
# USER CONFIGURATION
# ========================================
# Максимальное количество пользователей (для бесплатного плана)
MAX_USERS=1000

# Время жизни сессии (в часах)
SESSION_LIFETIME=24

# ========================================
# MONITORING CONFIGURATION
# ========================================
# Включить метрики Prometheus
ENABLE_PROMETHEUS=true

# Порт для метрик
METRICS_PORT=9090

# ========================================
# BACKUP CONFIGURATION
# ========================================
# Автоматическое резервное копирование
ENABLE_AUTO_BACKUP=false

# Частота резервного копирования (в днях)
BACKUP_FREQUENCY=7

# Путь для резервных копий
BACKUP_PATH=./backups

# ========================================
# INTEGRATION CONFIGURATION
# ========================================
# Интеграция с фитнес-трекерами
ENABLE_FITNESS_TRACKER_INTEGRATION=false

# Поддерживаемые трекеры
SUPPORTED_TRACKERS=fitbit,garmin,apple_health

# ========================================
# SOCIAL FEATURES
# ========================================
# Включить социальные функции
ENABLE_SOCIAL_FEATURES=false

# Возможность делиться тренировками
ENABLE_WORKOUT_SHARING=false

# ========================================
# AI FEATURES
# ========================================
# Включить AI рекомендации
ENABLE_AI_RECOMMENDATIONS=false

# Модель для персонализации
AI_MODEL=gpt-3.5-turbo

# Температура для генерации (0.0 - 1.0)
AI_TEMPERATURE=0.7

# ========================================
# LOCAL DEVELOPMENT
# ========================================
# Для локальной разработки без ngrok
USE_LOCAL_TUNNEL=false

# Альтернатива ngrok (localtunnel)
LOCALTUNNEL_SUBDOMAIN=aigym-coach

# ========================================
# DEBUG CONFIGURATION
# ========================================
# Режим отладки
DEBUG=true

# Показывать детальные ошибки
SHOW_DETAILED_ERRORS=true

# Логировать все запросы
LOG_ALL_REQUESTS=true 